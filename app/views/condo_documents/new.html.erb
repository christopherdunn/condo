  <div class="row">
    <div class="small-4 columns">
<%= form_for([@hoa, @condo_document], html: { class: 'form-horizontal' }) do |f| %>

<% if @condo_document.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@condo_document.errors.count, "error") %> prohibited this repair from being saved:</h2>

    <ul>
    <% @condo_document.errors.full_messages.each do |msg| %>
